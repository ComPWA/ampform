{
  "$id": "https://github.com/ComPWA/expertsystem/blob/master/expertsystem/schemas/yaml-particle-list.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["ParticleList"],
  "properties": {
    "ParticleList": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "required": ["PID", "Mass", "QuantumNumbers"],
          "properties": {
            "PID": { "type": "integer" },
            "Mass": { "$ref": "#/definitions/MeasuredValue" },
            "Width": { "$ref": "#/definitions/MeasuredValue" },
            "QuantumNumbers": { "$ref": "#/definitions/QuantumNumbers" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "definitions": {
    "QuantumNumbers": {
      "type": "object",
      "required": ["Charge", "Spin"],
      "properties": {
        "Charge": { "type": "number" },
        "Spin": { "type": "number" },
        "Parity": { "enum": [-1, 1] },
        "CParity": { "enum": [-1, 1] },
        "GParity": { "enum": [-1, 1] },
        "Strangeness": { "type": "integer" },
        "Charmness": { "type": "integer" },
        "Bottomness": { "type": "integer" },
        "Topness": { "type": "integer" },
        "BaryonNumber": { "type": "integer" },
        "ElectronLN": { "type": "integer" },
        "MuonLN": { "type": "integer" },
        "TauLN": { "type": "integer" },
        "IsoSpin": {
          "anyOf": [
            { "type": "number", "minimum": 0, "maximum": 0 },
            {
              "type": "object",
              "required": ["Value"],
              "properties": {
                "Value": { "type": "number" },
                "Projection": { "type": "number" }
              },
              "additionalProperties": false
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "MeasuredValue": {
      "anyOf": [
        { "$ref": "#/definitions/Scalar" },
        {
          "type": "object",
          "required": ["Value"],
          "properties": {
            "Value": { "$ref": "#/definitions/Scalar" },
            "Error": { "$ref": "#/definitions/Scalar" }
          },
          "additionalProperties": false
        }
      ]
    },
    "Scalar": {
      "anyOf": [
        { "type": "number" },
        {
          "type": "string",
          "regex": "[-+]?(\\.[0-9]+|[0-9]+(\\.[0-9]*)?)([eE][-+]?[0-9]+)?"
        }
      ]
    }
  }
}
